<head>
  <title>Farmers Market</title>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <link href="/stylesheets/style.css" rel="stylesheet">

  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script src="/javascripts/angular.js"></script>
  <script src="/javascripts/config.js"></script>
  <script src="/javascripts/nav.js"></script>
  <script src="/javascripts/directives.js"></script>
  <script src="/javascripts/auth/auth.controller.js"></script>
  <script src="/javascripts/auth/auth.service.js"></script>
  <script src="/javascripts/goods/goods.controller.js"></script>
  <script src="/javascripts/goods/goods.service.js"></script>
  <script src="/javascripts/users/users.controller.js"></script>
</head>
<body ng-app="farmersMarket" ng-controller="MainCtrl as main">
	<nav class="navbar navbar-default" ng-controller="NavCtrl">
    <div class="container-fluid">
      <div class="col-md-4">
        <a class="navbar-brand" href="/#/home">
          <span style="color:#0b7bbf">F</span><span style="color:#82ed96">M</span>
        </a>
      </div>
      <ul class="nav navbar-nav col-md-5">
        <li><a href="/#/home">Home</a></li>
        <li><a href="/#/goods/produce">Produce</a></li>
        <li><a href="/#/goods/dairy">Dairy</a></li>
        <li><a href="/#/goods/meat">Meat</a></li>
        <li><a href="/#/goods/other">Other</a></li>
        <li><a href="/#/search">Search</a></li>
      </ul>

      <ul class="nav navbar-nav col-md-3">
        <li ng-show="isLoggedIn()&&!currentUser().farmer"><a href="/#/reorder/{{ currentUser().username }}">Reorder</a></li>
        <li ng-show="isLoggedIn()&&!currentUser().farmer"><a href="/#/cart">Cart</a></li>
        <li ng-show="isLoggedIn()&&currentUser().farmer"><a href="/#/new">Post</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
        <li class="dropdown" ng-show="isLoggedIn()">
          <a href="#" class="dropdown-toggle capitalize" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ currentUser().username }} <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li ng-show="isLoggedIn()"><a href="/#/users/{{ currentUser().username }}">Profile</a></li>
            <li ng-show="isLoggedIn()"><a href="/#/users/edit">Edit Profile</a></li>
            <li ng-show="isLoggedIn()"><a href="/#/favorites">Favorites</a></li>
            <li role="separator" class="divider"></li>
            <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <ui-view></ui-view>
    </div>
  </div>
</body>
</html>